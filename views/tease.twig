{% block content %}
    <article class="post">
        <header class="post-header">
            <h3 class="post-box-title"><a href="{{post.link}}">{{post.title}}</a></h3>
        </header>
        {% if post.thumbnail.src %}
        <figure class="post-image-holder">
            <a href="{{post.link}}">
                    <img src="{{post.thumbnail.src}}" />
            </a>
        </figure>
        {% endif %}
        <div class="post-content">
            <p class="post-excerpt">{{post.get_preview(50)}}</p>
        </div>
    </article>
{% endblock %}