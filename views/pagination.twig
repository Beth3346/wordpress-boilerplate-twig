<nav class="elr-row">
    <div class="pagination post-nav elr-col-full">
    {% if pagination.prev %}
        <a href="{{pagination.prev.link}}#page-top" class="previous-pager prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
    {% else %}
        <a style="visibility:hidden;" href="{{pagination.prev.link}}#page-top" class="previous-pager prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
    {% endif %}
    <ul class="pagination-list">
        {% for page in pagination.pages %}
            <li>
                {% if page.link %}
                    <a href="{{page.link}}#page-top" class="{{page.class}}">{{page.title}}</a>
                {% else %}
                    <a class="active {{page.class}}">{{page.title}}</a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    {% if pagination.next %}
        <a href="{{pagination.next.link}}#page-top" class="next next-pager {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
    {% else %}
        <a style="visibility:hidden;" href="{{pagination.next.link}}#page-top" class="next next-pager {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
    {% endif %}
    </div>
</nav>